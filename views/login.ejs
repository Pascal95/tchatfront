<%- include ('header')%>


<div class="text-center center-div" id="login">
    <div class="container w-50 border py-5" style="background-color: rgb(196, 196, 196,0.8)">
        <div class="title-pb5">
            <h2 class="font-weight-bold">
                Login System
            </h2>
            <span class="soustitre">Log in for the existing user</span>
            <form action="route/login" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="email">
                    <small class="form-text text-muted text-left">Register email address</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <button type="submit" class="btn btn-success rounded-pill"> submit</button>
            </form>
            
        </div>
    </div>

</div>



